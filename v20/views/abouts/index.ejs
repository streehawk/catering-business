<!--About index-->
<% include ../partials/header %>
<div class="container">
    <% if(currentUser && currentUser.isAdmin){  %>
        <a class = "btn btn-primary btn-large" href = "/abouts/new">Add about</a>
    <% } %>
<% abouts.forEach(function(about){ %>
<div class="container">
 	<div class="row">
 	    <div class="content">
 		    <div class="col-lg-12">
 			    
 			    <div class ="text-center">
 			        
 			            <h2><%= about.title %></h2>
                </div>
                <hr>
            </div>
            <div class="row">
                    <div class="col-md-4 picPost">
                        <div class="thumbnail">
                            <img style="max-height:250px;" src="<%= about.image %>">
                        </div>
                    </div>
                    <div class="col-md-8 post">
                        <ul style="list-style: none;">
                            <li><p><%=about.about%></p></li>
                        </ul>
                        <% if(currentUser && currentUser.isAdmin){  %>
                            <a class="btn btn-xs btn-warning" href="/abouts/<%=about._id %>/edit">Edit</a>
                            <form id= "delete-form" action ="/abouts/<%= about._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete"> 
                            </form>
                        <% } %>
                    
                    </div>
                    
                </div>
                
            </div>
        </div>
        
</div>
<% }); %>

            
    
<% include ../partials/footer %>