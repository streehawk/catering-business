<!--service new-->
<% include ../partials/header %>
<div class="row">
    
    <% if(currentUser && currentUser.isAdmin){  %>
        <h1 style= "text-align:center;">Add new service</h1>
     <% } %>
    
    <!--submission will add to service page-->
    <!--margin: top/bottom left/right-->
    <div style="width: 30%; margin:25px auto">
        <form action="/services" method="post">
            <!--name will be used to grab a data inside the route from the request body-->
            <!--form-group creates a gap between lines-->
            <div class="form-group">
                <input class="form-control" type = "text"  name = "service[service]" placeholder="service name"> 
            </div>
            <div class="form-group">
                <textarea class="form-control" type = "text" rows = "10" name = "service[desc]" placeholder="description"></textarea>
            </div> 
            <!--btn-block: takes up the entire line-->
            <!--btn-primary makes button blue-->
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"> Submit </button>
            </div>
        </form>
        <a href="/services">Go back</a>
    </div>
</div>

<% include ../partials/footer %>
    