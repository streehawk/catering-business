<!--Contact edit-->
<% include ../partials/header %>
<div class="row">

    <h2 style= "text-align:center;">Edit <%=contact.name%></h2>
    
    <!--submission will add to service page-->
    <!--margin: top/bottom left/right-->
    <div style="width: 30%; margin:25px auto">
        <form action="/contacts/<%=contact._id%>?_method=PUT" method="POST">
            <!--name will be used to grab a data inside the route from the request body-->
            <!--form-group creates a gap between lines-->
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type = "text"  name = "contact[name]" value = "<%=contact.name%>"> 
            </div>
            <div class="form-group">
                <label>Phone Number</label>
                <input class="form-control" type = "text"  name = "contact[phoneNumber]" value = "<%=contact.phoneNumber%>"> 
            </div>
            <div class="form-group">
                <label>Office hours</label>
                <input class="form-control" type = "text"  name = "contact[hours]" value = "<%=contact.hours%>"> 
            </div>
            <div class="form-group">
                <label>Email address</label>
                <input class="form-control" type = "email"  name = "contact[email]" value = "<%=contact.email%>"> 
            </div>
            
            <!--btn-block: takes up the entire line-->
            <!--btn-primary makes button blue-->
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"> Submit </button>
            </div>
        </form>
        <a href="/contacts">Go back</a>
    </div>
</div>

<% include ../partials/footer %>
    