<!--About edit-->
<% include ../partials/header %>
<div class="row">

    <h2 style= "text-align:center;">Edit <%=about.title%></h2>
    <hr>
    
    <!--submission will add to service page-->
    <!--margin: top/bottom left/right-->
    <div style="width: 30%; margin:25px auto">
        <form action="/abouts/<%=about._id%>?_method=PUT" method="POST">
            <!--name will be used to grab a data inside the route from the request body-->
            <!--form-group creates a gap between lines-->
            <div class="form-group">
                <label>Title</label>
                <input class="form-control" type = "text"  name = "about[title]" value = "<%=about.title%>"> 
            </div>
            <div class="form-group">
                <label>Description</label>
                <textarea class="form-control" type = "text" rows = "10" name = "about[about]"><%=about.about%></textarea>
            </div> 
            <!--btn-block: takes up the entire line-->
            <!--btn-primary makes button blue-->
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"> Submit </button>
            </div>
        </form>
        <a href="/abouts">Go back</a>
    </div>
</div>

