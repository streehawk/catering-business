<% include ../partials/header %>
<!--end of jumbotron-->
</header>
<div class="row">

    <h2 style= "text-align:center;">ADD NEW IMAGE</h2>
    <hr>
    
    
    <!--submission will add to image page-->
    <!--margin: top/bottom left/right-->
    <!--enctype: allows to have file uploaded-->
    <div style="width: 30%; margin:25px auto">
        <form action="/images" method="post" enctype="multipart/form-data">
            <!--name will be used to grab a data inside the route from the request body-->
            <!--form-group creates a gap between lines-->
            <div class="form-group">
                <label for = "name">Name*</label>
                <input class="form-control" type = "text" name = "image[name]" placeholder="name" required> 
            </div>
            <div class="form-group">
                <label for = "image">Image*</label>
                <input type = "file" id="image" accept="image/*" name = "image" required>
            </div> 
            <div class="form-group">
                <label for = "image">Ingredient*</label>
                <input class="form-control" type = "text" name = "image[ingredient]" placeholder="ingredient" required>
            </div> 
            <!--btn-block: takes up the entire line-->
            <!--btn-primary makes button blue-->
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"> Submit </button>
            </div>
        </form>
        <a href="/images">Go back</a>
    </div>
</div>

<% include ../partials/footer %>